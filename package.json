{
  "name": "frigobar",
  "version": "0.0.0-development",
  "description": "A component library",
  "scripts": {
    "clean:build": "rm -rf ./dist",
    "copy-files": "babel-node ./scripts/copy-files.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "commitizen": "git-cz",
    "build": "cross-env NODE_ENV=production babel ./components --extensions '.js,.jsx' --out-dir ./dist/esm",
    "prebuild": "npm run clean:build",
    "postbuild": "cross-env NODE_ENV=production npm run copy-files",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/allyssonsantos/frigobar.git"
  },
  "keywords": [
    "component",
    "library",
    "react",
    "styled-components"
  ],
  "sideEffects": false,
  "author": "Allysson Santos <aallysson0@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/allyssonsantos/frigobar/issues"
  },
  "homepage": "https://github.com/allyssonsantos/frigobar#readme",
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.5.4",
    "@babel/node": "^7.6.1",
    "@babel/preset-env": "^7.6.0",
    "@babel/preset-react": "^7.0.0",
    "@semantic-release/commit-analyzer": "^6.3.0",
    "@semantic-release/npm": "^5.1.15",
    "@storybook/addon-actions": "^5.1.9",
    "@storybook/addon-links": "^5.1.9",
    "@storybook/addons": "^5.1.9",
    "@storybook/react": "^5.1.9",
    "babel-loader": "^8.0.6",
    "commitizen": "^4.0.3",
    "cross-env": "^5.2.1",
    "cz-conventional-changelog": "^3.0.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "semantic-release": "^15.13.24",
    "styled-components": "^4.3.2"
  },
  "peerDependencies": {
    "react": "16.x",
    "react-dom": "16.x",
    "styled-components": "4.x"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "./dist/esm"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
